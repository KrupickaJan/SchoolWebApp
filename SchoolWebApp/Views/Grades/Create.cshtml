@using SchoolWebApp.DTO;
@using SchoolWebApp.Models;
@model GradeDTO;

<div>
	<form asp-action="Create">
		<h4>Create a new grade</h4>
		<div class="form-group my-3">
			<label asp-for="StudentId" class="control-label"></label>
			<select asp-for="StudentId" class="form-control" asp-items="ViewBag.Students"></select>
		</div>
		<div class="form-group my-3">
			<label asp-for="SubjectId" class="control-label"></label>
			<select asp-for="SubjectId" class="form-control" asp-items="ViewBag.Subjects"></select>
		</div>
		<div class="form-group my-3">
			<label asp-for="Topic"></label>
			<input asp-for="Topic" type="text" class="form-control" placeholder="What was examined"></input>
		</div>
		<div class="form-group my-3">
			<label asp-for="Mark" class="control-label">Mark</label>
			<input asp-for="Mark" type="number" class="form-control" placeholder="Mark"></input>
		</div>
		<div>
			<input class="btn btn-success my-3" type="submit" value="Create" />
		</div>
	</form>
</div>