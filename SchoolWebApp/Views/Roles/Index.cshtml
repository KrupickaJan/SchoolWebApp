@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "ROLES";
}
<h1>All Roles</h1>

<table class="table rounded-table table-striped table-dark my-3">
    <tr>
        <th>Name</th>
        <th>Edit</th>
        <th>Delete</th>
        <th>ID</th>
    </tr>
    @if (User.Identity.IsAuthenticated && (User.IsInRole("Admin")))
    {
        <tr>
            <th colspan="5">
                <a asp-action="Create" class="btn btn-secondary">Create new role</a>
            </th>
        </tr>
    }
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td><a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@role.Id">Edit</a></td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
            <td>@role.Id</td>
        </tr>
    }
</table>